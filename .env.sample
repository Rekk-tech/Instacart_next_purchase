# Environment Variables Template
# Copy this to .env and fill in your actual values
# DO NOT commit .env to version control

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/instacart
REDIS_URL=redis://localhost:6379/0

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=instacart_next_purchase
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000

# AWS Configuration (if using)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_DEFAULT_REGION=us-west-2
S3_BUCKET=instacart-ml-bucket

# Data Paths
DATA_RAW_PATH=./data/raw
DATA_STAGING_PATH=./data/staging  
DATA_PROCESSED_PATH=./data/processed

# Model Configuration
MODEL_REGISTRY_PATH=./experiments/checkpoints
FEATURE_STORE_PATH=./data/processed

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Airflow Configuration
AIRFLOW_HOME=./infra/airflow
AIRFLOW__CORE__DAGS_FOLDER=./infra/airflow/dags
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# Development
PYTHONPATH=./src
ENVIRONMENT=development